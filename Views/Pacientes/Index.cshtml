@model IEnumerable<Registro_de_Pacientes.Pacientes>

@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Pagina de Inicio</h2>
</div>

<br />
<br />
<br />
<br />

<div style="text-align:right">
    @Html.ActionLink("Registrar Pacientes", "Create", "Pacientes", null, new { miAtributo = "Valor1", @class = "btn btn-primary" })
</div>

<br />

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Cedula)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Edad)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Correo)
            </th>
            <th scope="col">
                @Html.DisplayName("Motivo Consulta")
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th scope="col">
                @Html.DisplayNameFor(model => model.Fecha)
            </th>
            <th>@Html.DisplayName("Accion Adicional")</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Cedula)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Apellido)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Edad)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Correo)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.MotivoConsulta)
                </td>
                <td scope="row">
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td scope="row">
                    @Convert.ToDateTime(item.Fecha).ToString("dd/MM/yyyy")
                </td>
                <td scope="row">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    @Html.ActionLink("Detalle", "Details", new { id = item.Id })
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>


</table>
